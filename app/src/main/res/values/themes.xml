<resources>
    <style name="ThemeWorkDays" parent="Theme.Material3.DynamicColors.Dark">

        <item name="android:windowLightStatusBar">false</item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="My_Date_picker">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">@font/raleway_semibold</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


</resources>